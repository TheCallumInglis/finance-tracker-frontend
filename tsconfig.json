{
  "compilerOptions": {
    "target": "ES6",                         
    "module": "ESNext",                       
    "jsx": "react-jsx",                       
    "strict": true,                           
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true, 
    "resolveJsonModule": true,                
    "isolatedModules": true,
    "moduleResolution": "node"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}